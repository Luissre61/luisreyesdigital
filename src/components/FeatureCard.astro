---
export interface Props {
	title: string;
	description: string;
	icon?: string; // Emoji
	class?: string; // Para pasar clases adicionales como el color de fondo
}

const { title, description, icon } = Astro.props;
---

<div
	class:list={[
		"group bg-gray-50 p-4 sm:p-6 rounded-lg shadow-md border border-gray-200 transition-all duration-300 hover:-translate-y-2 hover:bg-blue-900 w-[90vw] mx-auto md:w-full text-gray-900 hover:text-white",
		Astro.props.class,
	]}
>
	{icon ? (
		<div class="flex items-center gap-4 mb-4">
			<div class="w-16 h-16 rounded-full bg-white flex items-center justify-center shadow-md border border-gray-200 flex-shrink-0">
				<span class="text-3xl">{icon}</span>
			</div>
			<h2 class="min-w-0 flex-grow text-base font-semibold group-hover:text-white md:text-xl">
				{title}
			</h2>
		</div>
	) : (
		<h2 class="text-base md:text-2xl font-semibold group-hover:text-white">{title}</h2>
	)}
	<p class="mt-1 sm:mt-4 text-sm md:text-lg text-gray-600 group-hover:text-white">
		{description}
	</p>
</div>