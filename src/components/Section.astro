---
// src/components/Section.astro
export interface Props {
  title: string;
  subtitle: string;
  sectionNumber?: number;
  subtitleColor?: string;
}

const {
  title,
  subtitle,
  sectionNumber = 0,
  subtitleColor = "text-gray-600",
} = Astro.props;
---

<div class="bg-white p-4 sm:p-6 ">
  {/* Añadimos un margen inferior (mb-4) para separar el título del contenido. */}
  {/* Aplicamos el color de gradiente al título, como en la página de inicio */}
  {/* Añadimos "not-prose" para que los estilos del blog no anulen el color de gradiente */}
  <h2 class="not-prose text-2xl sm:text-4xl font-bold mb-4 bg-clip-text bg-gradient-to-r from-blue-600 to-cyan-500 text-transparent">
    {sectionNumber > 0 && `${sectionNumber}. `}{title}
    {/* Añadimos un margen superior (mt-2) para separar el subtítulo del título principal. */}
    {/* El subtítulo ahora usa un color sólido para mejor legibilidad */}
    <span class={`block text-base sm:text-xl mt-2 animate-pulse ${subtitleColor}`}>
      {subtitle}
    </span>
  </h2>
  
  <div class="space-y-6">
    <slot />
  </div>
</div>