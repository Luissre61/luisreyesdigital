---
// src/components/TipCard.astro
export interface Props {
  title: string;
  description: string; // A침adimos la prop para la descripci칩n
  icon?: string;
  borderColor?: string;
}

const { 
  title, 
  description, // La extraemos de las props
  icon = '游눠', 
  borderColor = 'border-blue-500' 
} = Astro.props;
---

<!-- A침adimos la clase 'card-item' para que el script la detecte y el cursor-pointer para la interactividad -->
<div class={`card-item bg-white p-4 rounded-lg shadow-sm border-l-4 ${borderColor} cursor-pointer transition-transform duration-300 hover:-translate-y-1`}>
  <!-- Cambiamos h3 por h2 para que coincida con el selector del script (h2, p) -->
  <h2 class="font-bold flex items-center gap-2 mb-2 text-base sm:text-lg text-gray-800">
    {icon} {title}
  </h2>
  <p class="text-sm sm:text-base text-gray-600">
    {description} <!-- Mostramos la descripci칩n desde la prop -->
  </p>
</div>