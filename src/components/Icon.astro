---
interface Props {
  name: string;
  class?: string;
  width?: number;
  height?: number;
}

const { name, class: className, width = 24, height = 24 } = Astro.props;

// Construye la ruta al sprite, asegurando que funcione correctamente
// tanto en desarrollo como en producci√≥n con una ruta base.
const spriteHref = `${import.meta.env.BASE_URL.replace(/\/$/, '')}/iconos/sprite.svg#${name}`;
---
<svg class:list={[className]} {width} {height} fill="currentColor">
  <use href={spriteHref} />
</svg>