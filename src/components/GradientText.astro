---
interface Props {
  as?: string;
  class?: string;
  gradient?: string;
  animate?: boolean;
}

const { 
  as: Tag = 'span', 
  class: className = '', 
  gradient = 'from-blue-600 to-cyan-500',
  animate = false
} = Astro.props;
---

<Tag class:list={["bg-clip-text text-transparent bg-gradient-to-r", gradient, animate ? "animate-gradient-flow animate-duration-1500" : "", className]}>
  <slot />
</Tag>