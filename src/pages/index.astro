---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FeatureCard from "../components/FeatureCard.astro";

import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="es">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body class="overflow-x-hidden">
        <Header />
        <main class="flex flex-col gap-16 sm:gap-24">

          <!-- Sección 1 - Modernizada -->
<!-- Sección 1 - Versión final -->
<section title="Mis estrategias" class="min-h-[85vh]">
    <div class="bg-[#000033] font-sans text-white h-[90vh] px-4 sm:px-6 lg:px-8 relative overflow-hidden">
        <!-- Patrón de conexiones tecnológicas (fondo) -->
        <div class="absolute inset-0 opacity-20">
            <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')]"></div>
        </div>

        <div class="max-w-7xl mx-auto h-full grid grid-cols-1 md:grid-cols-2 gap-8 items-center relative z-10">
            <div class="space-y-4 sm:space-y-6">
                <h1 class="text-2xl sm:text-4xl font-bold leading-tight bg-clip-text text-transparent bg-gradient-to-r from-cyan-400 to-blue-500">
                    Soy Luis Reyes
                </h1>

                <p class="text-lg sm:text-2xl leading-relaxed font-medium text-gray-200">
                    Te enseño a crear tu marca personal. Mi experiencia y 
                    constante evolución son la base de mi guía que 
                    te ayudará a construir tu 
                    <b class="inline-block px-1 font-bold text-white bg-gradient-to-r from-cyan-500 to-blue-600 bg-clip-text text-transparent animate-pulse">
                        futuro digital.
                    </b>
                </p>

                <a href={import.meta.env.BASE_URL + "about/"} class="inline-block bg-gradient-to-r from-blue-600 to-cyan-500 text-white px-8 py-3 sm:px-10 sm:py-4 mt-8 rounded-full text-lg sm:text-xl font-bold transition-all duration-500 hover:shadow-xl hover:shadow-cyan-500/30 transform hover:-translate-y-1 hover:scale-105 relative overflow-hidden group">
                    <span class="relative z-10 flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                        </svg>
                        🚀 Explora Mi Viaje Digital
                    </span>
                    <span class="absolute inset-0 bg-gradient-to-r from-cyan-500 to-blue-600 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></span>
                </a>
            </div>

            <div class="flex justify-center h-full items-center">
                <img
                    src={import.meta.env.BASE_URL + "/imagenes/luis-7.png"}
                    alt="Luis Reyes - Profesional digital"
                    class="h-[70vh] object-contain"
                    loading="lazy"
                />
            </div>
        </div>
    </div>
</section>

<!-- Sección habilidades -->
<section class="min-h-[70vh] flex flex-col md:flex-row items-center justify-center gap-8 px-4 sm:px-6 lg:px-8 py-12 bg-white">
    <!-- Contenedor de información (45% del viewport) -->
    <div class="text-gray-800 w-full md:w-[90vw] lg:w-[70vw] xl:w-[50vw] 2xl:w-[45vw] max-w-4xl mx-auto">
        <div class="text-left flex flex-col gap-6 sm:gap-8">
            <!-- Título responsivo -->
            <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-[#000033] mb-4">
               Habilidades que Impulsan mi Visión Digital
            </h1>

            <!-- Descripción -->
           <ul class="text-lg sm:text-xl space-y-3 font-medium text-gray-700">
