---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { Image } from 'astro:assets';

import "../styles/global.css";

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="es">
	<head>
		<BaseHead title={title} description={description} />
		<style is:global>
			:root {
				--max-content-width: 80ch;
				--color-primary: #2563eb;
				--color-primary-hover: #1d4ed8;
				--color-text: #1e293b;
				--color-text-light: #64748b;
				--color-border: #e2e8f0;
				--radius-lg: 12px;
				--radius-md: 8px;
				--shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
				--shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
				--transition: all 0.2s ease;
			}

			body {
				background-color: #f8fafc;
				color: var(--color-text);
				line-height: 1.6;
			}

			main {
				max-width: 100%;
				margin: 0 auto;
				/* Padding por defecto para pantallas m치s grandes */
				padding: 2rem 1rem;
			}

			.article-container {
				max-width: var(--max-content-width);
				margin: 0 auto;
				background: white;
				border-radius: var(--radius-lg);
				box-shadow: var(--shadow-md);
				overflow: hidden;
			}

			.hero-image {
				width: 100%;
				max-height: 400px;
				overflow: hidden;
			}

			.hero-image img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				transition: var(--transition);
			}

			.article-container:hover .hero-image img {
				transform: scale(1.02);
			}

			.article-content {
				padding: 2rem;
			}

			.article-header {
				margin-bottom: 2rem;
				text-align: center;
			}

			.article-title {
				font-size: 2.25rem;
				font-weight: 800;
				line-height: 1.2;
				margin-bottom: 1rem;
				color: var(--color-text);
			}

			.article-meta {
				display: flex;
				flex-direction: column;
				gap: 0.5rem;
				margin-bottom: 1.5rem;
				color: var(--color-text-light);
				font-size: 0.875rem;
			}

			.article-meta-item {
				display: flex;
				align-items: center;
				gap: 0.5rem;
			}

			.article-divider {
				height: 1px;
				background-color: var(--color-border);
				margin: 2rem 0;
				border: none;
			}

			.prose {
				max-width: var(--max-content-width);
				margin: 0 auto;
			}

			.prose :where(h2):not(:where([class~="not-prose"] *)) {
				font-size: 1.5rem;
				font-weight: 700;
				margin-top: 2rem;
				margin-bottom: 1rem;
			}

			.prose :where(p):not(:where([class~="not-prose"] *)) {
				margin-bottom: 1.25rem;
			}

			@media (max-width: 768px) {
				main {
					/* Se elimina todo el padding en m칩viles para un dise침o de ancho completo. */
					padding: 1em;
				}

				.article-container {
					/* Se eliminan los estilos de "tarjeta" en m칩vil para que el contenido MDX tome el control. */
					border-radius: 0;
					box-shadow: none;
				}

				.article-title {
					font-size: 1.75rem;
				}

				.article-content {
					/* Se elimina el padding para que el contenido MDX pueda ser de ancho completo. */
					padding: 0;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article class="article-container">
				{heroImage && (
					<div class="hero-image">
						<Image width={1200} height={630} src={heroImage} alt="" />
					</div>
				)}
				<div class="article-content">
					<header class="article-header">
						<div class="article-meta">
							<span class="article-meta-item">
								<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
									<path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
									<polyline points="9 22 9 12 15 12 15 22"></polyline>
								</svg>
								<span>Blog</span>
							</span>
							<span class="article-meta-item">
								<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
									<circle cx="12" cy="12" r="10"></circle>
									<polyline points="12 6 12 12 16 14"></polyline>
								</svg>
								<FormattedDate date={pubDate} />
							</span>
							{updatedDate && (
								<span class="article-meta-item">
									<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
										<path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
										<circle cx="12" cy="12" r="3"></circle>
									</svg>
									<span>Actualizado el <FormattedDate date={updatedDate} /></span>
								</span>
							)}
						</div>
						<h1 class="article-title">{title}</h1>
						<hr class="article-divider" />
					</header>
					<div class="prose">
						<slot />
					</div>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>