---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { Image } from 'astro:assets';

import "../styles/global.css";

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="es">
	<head>
		<BaseHead title={title} description={description} />
		<style is:global>
			:root {
				--max-content-width: 80ch;
				--color-primary: #2563eb;
				--color-primary-hover: #1d4ed8;
				--color-text: #1e293b;
				--color-text-light: #64748b;
				--color-border: #e2e8f0;
				--radius-lg: 12px;
				--radius-md: 8px;
				--shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
				--shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
				--transition: all 0.2s ease;
			}

			body {
				background-color: #f8fafc;
				color: var(--color-text);
				line-height: 1.6;
			}

			main {
				max-width: 100%;
				margin: 0 auto;
				/* Padding por defecto para pantallas más grandes */
				
			}

			.article-container {
			
				margin: 0 auto;
				background: white;
				
				box-shadow: var(--shadow-md);
				overflow: hidden; /* Mantenemos esto para el heroImage */
			}

			.hero-image {
				width: 100%;
				min-height: 550px; /* Damos una altura mínima para asegurar espacio */
				overflow: hidden;
				display: flex; /* Habilitamos flexbox para centrar */
				align-items: center; /* Centrado vertical */
				justify-content: center; /* Centrado horizontal */
				text-align: center; /* Centramos el texto del contenido */
			}

			.article-content {
				/* Ajustamos el padding ya que el header no está aquí */
				padding: 2rem 1rem;
			}

			.article-meta-item {
				display: flex;
				align-items: center;
				gap: 0.5rem;
			}

			.prose {
				max-width: var(--max-content-width);
				margin: 0 auto;
			}

			.prose :where(h2):not(:where([class~="not-prose"] *)) {
				font-weight: 700;
				margin-top: 2rem;
				margin-bottom: 1rem;
			}

			.prose :where(p):not(:where([class~="not-prose"] *)) {
				margin-bottom: 1.25rem;
			}

			@media (max-width: 768px) {
				main {
					
				}

				.article-container {
					/* Se eliminan los estilos de "tarjeta" en móvil para que el contenido MDX tome el control. */
					border-radius: 0;
					box-shadow: none;
				}

				.article-content {
					/* Se elimina el padding para que el contenido MDX pueda ser de ancho completo. */
					padding: 1.5rem 1rem;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article class="article-container">
				{heroImage && (
					<div class="hero-image relative">
						{/* La imagen de cabecera */}
						<Image
							width={1200}
							height={630}
							src={heroImage}
							alt={`Imagen de portada para ${title}`}
							class="absolute inset-0 w-full h-full object-cover"
						/>
						{/* La capa de superposición oscura */}
						<div class="absolute inset-0 bg-black opacity-30"></div>
						{/* El header ahora va aquí, sobre la imagen y la superposición */}
						{/* Caja semitransparente para el contenido del header */}
						<header class="relative z-10 mx-auto max-w-[90%] rounded-lg bg-slate-800/50 p-6 backdrop-blur-sm md:p-8">
							{/* Metadatos del post (fecha, etc.) con estilos de Tailwind */}
							<div class="mb-6 flex flex-col items-center justify-center gap-2 text-sm text-white">
								<span class="article-meta-item">
									<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
										<path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
										<polyline points="9 22 9 12 15 12 15 22"></polyline>
									</svg>
									<span>Stack</span>
								</span>
								<span class="article-meta-item">
									<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
										<circle cx="12" cy="12" r="10"></circle>
										<polyline points="12 6 12 12 16 14"></polyline>
									</svg>
									<FormattedDate date={pubDate} />
								</span>
								{updatedDate && (
									<span class="article-meta-item">
										<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
											<path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
											<circle cx="12" cy="12" r="3"></circle>
										</svg>
										<span>Actualizado el <FormattedDate date={updatedDate} /></span>
									</span>
								)}
							</div>
							{/* Título del post con estilos de Tailwind */}
							<h1 class="text-2xl font-extrabold leading-tight text-white md:text-4xl">{title}</h1>
						</header>
					</div>
				)}
				<div class="article-content">
					<div class="prose">
						<slot />
					</div>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>